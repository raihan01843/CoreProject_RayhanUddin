@model CoreProject_Raihan.Models.Publisher

<form enctype="multipart/form-data" asp-controller="Publishers" asp-action="Create" method="post" class="mt-3">
    <div class="modal-header">
        <h3 class="modal-title" id="categoryModalLabel">Add new publisher</h3>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body" style="background-color:aliceblue">
        <div class="form-group">
            Publisher :
            <input asp-for="Name" class="form-control" placeholder="publisher Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div id="0">
            <hr />

            <div class="row">
                <div class="form-group col-md-6">
                    Name :
                    <input asp-for="Books[0].Name" class="form-control" placeholder="Name" />
                    <span asp-validation-for="Books[0].Name" class="text-danger"></span>

                </div>
                <div class="form-group col-md-6">
                    Book Details :
                    <input asp-for="Books[0].BookDetails" class="form-control" />
                    <span asp-validation-for="Books[0].BookDetails" class="text-danger"></span>

                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-12">
                    Image :

                    <img id="_0" src="" width="300" data-tag="itemImageinCategory" />
                    <input id="Image" name="Image" type="file" data-tag="_0" onchange="changeImage(this, event)" />
                    <span asp-validation-for="Books[0].Image" class="text-danger"></span>
                </div>

            </div>
            <br />
            <div class="row">
                <div class="form-group col-md-6">
                    Publish Date:
                    <input asp-for="Books[0].PublishDate" class="form-control" />
                    <span asp-validation-for="Books[0].PublishDate" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    Quantity :
                    <input asp-for="Books[0].Quantity" class="form-control" />
                    <span asp-validation-for="Books[0].Quantity" class="text-danger"></span>
                </div>
            </div>
        </div>
        <hr />
        <div class="col-md-12">
            <button id="addModelButton" type="button" class="btn btn-dark btn-block">Add more book</button>
        </div>
        <input id="sl" type="hidden" value="0" />
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <input type="submit" class="btn btn-primary" value="Save" />
    </div>
</form>



